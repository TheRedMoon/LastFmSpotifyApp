<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="PlaylistID" />

            <EditText
                android:id="@+id/playlist_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLines="1"
                android:textSize="18sp" />
            <Button
                android:id="@+id/add_playlist"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Add playlist to your playlists" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PlaylistName" />

            <EditText
                android:id="@+id/playlist_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLines="1"
                android:textSize="18sp" />
            <Button
                android:id="@+id/delete_playlist"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Delete playlist from your playlists" />
        </LinearLayout>
    </LinearLayout>

   <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="Select a playlist" />
    <Spinner
        android:id="@+id/playlist_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/set_activeplaylist"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Set active playlist" />

</LinearLayout>